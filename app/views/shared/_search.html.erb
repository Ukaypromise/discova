<div class="d-flex justify-content-center mb-5">
  <%= form_tag(search_path, method: "get", class: "form-inline", style: "width: 70%;") do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search articles...", class:"form-control" %>
      <div class="input-group-append mx-1">
        <%= button_tag "Search", class: "btn btn-primary glyphicon glyphicon-search", :title=>nil %>
      </div>
    </div>
  <% end %>
</div>