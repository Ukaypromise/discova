<div class="container">
  <h2><%= @user.name %></h2>
  <h4>Last article created <%= time_ago_in_words(@user.created_at) %> ago</h4>
  <h4>Total Post :<%= pluralize(@user.post.count, 'post') %></h4>
  <h4><%= pluralize(@user.views, 'view') %></h4>
  <hr>

  <% @posts.each do |post| %>
    <div>
      <h2><%= post.title %></h2>
      <%= time_ago_in_words(post.created_at) %> ago
    </div>
  <% end %>
</div>