<div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-2 gap-5 hover: ">
    <!--Card 1-->
    <% @latest_posts.each do |post| %>
    <div class="rounded overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
      <div class="px-6">
        <div class="flex items-center gap-x-4 text-xs">
            <p class="text-gray-500"><%= post.created_at.strftime("%b %d, %Y %l:%M %p") %></p>
            <p class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">Marketing</p>
        </div>
        <div class=" text-lg leading-8 text-gray-600 font-bold"><%= post.title %></div>
        <p class=" line-clamp-3 text-sm leading-6 text-gray-600">
          <% post_body_words = post.body.to_plain_text.split(' ') %>
            <% truncated_body = post_body_words[0..15].join(' ') %>
            <%= truncated_body %>
            <% if post_body_words.size > 5 %>
              <span class="inline-block bg-gray-200 rounded-full mx-2 px-3 py-1 text-sm font-semibold text-gray-700 mr-2">
                <%= link_to "Read More", post, class:"no-underline" %>
              </span>
          <% else %>
            <span class="inline-block bg-gray-200 rounded-full mx-2 px-3 py-1 text-sm font-semibold text-gray-700 mr-2">
              <%= link_to "Read More", post, class:"no-underline" %>
            </span>
          <% end %>
        </p>
        <div class="relative  flex items-center gap-x-4">
          <% if current_user.image.attached? %>
              <%= image_tag current_user.image, class:"h-10 w-10 rounded-full bg-gray-50" %> 
          <% else %>
            <img src="https://mdbcdn.b-cdn.net/img/new/standard/nature/111.webp" class="h-10 w-10 rounded-full bg-gray-50"/>
          <% end %>
          <div >
            <%= link_to post.user.name, user_path(post.user), class:"font-semibold text-gray-900 no-underline" %>
            <p class="text-gray-600">Co-Founder / CTO</p> 
          </div>
        </div>
      </div>
      <div class="px-6 pb-2">
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#Ruby</span>
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= pluralize( post.views, "views")%></span>
      </div>
    </div>
    <% end %>
</div>


