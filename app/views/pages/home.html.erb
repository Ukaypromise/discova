<div class=" p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-5">
    <!--Card 1-->
    <% @latest_posts.take(3).each do |post| %>
    <div class=" rounded overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
      <div class="px-6">
        <div class="flex items-center gap-x-4 text-xs">
            <p class="text-gray-500"><%= post.created_at.strftime("%b %d, %Y %l:%M %p") %></p>
        </div>
        <div class=" text-lg leading-8 text-gray-600 font-bold"><%= post.title %></div>
        <div class=" line-clamp-3 text-sm leading-6 text-gray-600">
          <% post_body_words = post.body.to_plain_text.split(' ') %>
            <% truncated_body = post_body_words[0..15].join(' ') %>
            <%= truncated_body %>
            <% if post_body_words.size > 5 %>
              <span class="inline-block bg-gray-200 rounded-full mx-2 px-3 py-1 text-sm font-semibold text-gray-700 mr-2">
                <%= link_to "Read More", post, class:"no-underline" %>
              </span>
          <% else %>
            <span class="inline-block bg-gray-200 rounded-full mx-2 px-3 py-1 text-sm font-semibold text-gray-700 mr-2">
              <%= link_to "Read More", post, class:"no-underline" %>
            </span>
          <% end %>
        </div>
        <div class="mt-2 relative  flex items-center gap-x-4">
          <% if post.user && post.user.image.attached? %>
              <%= image_tag post.user.image, class:"h-10 w-10 rounded-full bg-gray-50" %> 
          <% else %>
            <img src="https://mdbcdn.b-cdn.net/img/new/standard/nature/111.webp" class="h-10 w-10 rounded-full bg-gray-50"/>
          <% end %>
          <div >
            <%= link_to post.user.name, user_path(post.user), class:"font-semibold text-gray-900 no-underline" %>
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><%= pluralize( post.views, "views")%></span>
          </div>
        </div>
      </div>
      <div class="px-6 pb-2">
      </div>
    </div>
    <% end %>
    <div data-controller="hello">
      <input type="text" data-hello-target="name" >
      <button data-action="click->hello#greet" class="text-white bg-black p-4">Greet</button>
      <span data-hello-target="output"></span>
    </div>

    <div data-controller="clipboard">
      PIN: <input data-clipboard-target="source" type="text" value="1234" readonly>
      <button data-action="clipboard#copy" >Copy to Clipboard</button>
